    // ========== HELPER METHODS ==========

    private static DeferredItem<Item> registerSpawnEgg(String name, DeferredHolder<?, ?> entityType, int primaryColor, int secondaryColor) {
        return ITEMS.register(name, () -> new SpawnEggItem(
                (EntityType<? extends net.minecraft.world.entity.Mob>) entityType.get(),
                primaryColor,
                secondaryColor,
                new Item.Properties()));
    }

    public static void register(IEventBus eventBus) {
        ITEMS.register(eventBus);
    }
